@{
    var usuario = Gestor_Documental.Util.Sesion.Current.Usuario ?? new Gestor_Documental.Models.Entidades.Usuario();
    string usuarioNombre = usuario.Nombre;
    string grupo = usuario.Grupo.Nombre;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag - Gestor Documental</title>
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/startbootstrap-sb-admin2/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/Content/startbootstrap-sb-admin2/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/startbootstrap-sb-admin2/dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="~/Content/startbootstrap-sb-admin2/vendor/morrisjs/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/startbootstrap-sb-admin2/vendor/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- jQuery -->
    <script src="~/Content/startbootstrap-sb-admin2/vendor/jquery/jquery-1.12.4.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/startbootstrap-sb-admin2/vendor/bootstrap/js/bootstrap.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Content/startbootstrap-sb-admin2/vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Content/startbootstrap-sb-admin2/dist/js/sb-admin-2.js"></script>

    <link href="~/Content/site.css" rel="stylesheet"/>

    <script src="~/Scripts/Autenticacion/Layout.js"></script>
</head>

<body>
    <div id="wrapper" class="navbar navbar-default">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gestor Documental", "Index", "Inicio", new { area = "" }, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Inicio")</li>
                    <li>@Html.ActionLink("Acerca de", "AcercaDe", "Inicio")</li>
                </ul>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> @usuarioNombre <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="~/Autenticacion/CerrarSesion"><i class="fa fa-sign-out fa-fw"></i> Cerrar sesión</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- <img src="~/Images/UAG/irtd.png" alt="IRTD" height="42" width="42" class="nav navbar-right">  -->
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="navbar-collapse">
                    <ul class="nav side-nav" id="side-menu">
                        <li class="sidebar-search" style="display:none;">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-edit fa-fw"></i> Catálogos<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="~/Usuario/Index" class="@(grupo == "SuperUsuarios" ? "habilitado" : "deshabilitado")" title="@(grupo == "SuperUsuarios" ? "Usuarios" : "No tiene permiso para ver usuarios")">Usuarios</a>
                                </li>
                                <li>
                                    <a href="~/Departamento/Index" class="@(grupo == "SuperUsuarios" ? "habilitado" : "deshabilitado")" title="@(grupo == "SuperUsuarios" ? "Departamentos" : "No tiene permiso para ver departamentos")">Departamentos</a>
                                </li>
                                <li>
                                    <a href="~/Area/Index" class="@(grupo == "SuperUsuarios" ? "habilitado" : "deshabilitado")" title="@(grupo == "SuperUsuarios" ? "Areas" : "No tiene permiso para ver areas")">Areas</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="~/Documento/Index" title="Documentos">Documentos</a>
                        </li>
                        <li>
                            <a href="~/Configuracion/Index" class="@(grupo == "SuperUsuarios" ? "habilitado" : "deshabilitado")" title="@(grupo == "SuperUsuarios" ? "Configuración": "No tiene permiso para ver configuración")">Configuración</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
    </div><!-- /#wrapper -->
    <div id="page-wrapper">
        <div class="container-fluid">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2016 José Manuel Placeres Castro - Gestor Documental</p>
            </footer>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</body>
</html>
